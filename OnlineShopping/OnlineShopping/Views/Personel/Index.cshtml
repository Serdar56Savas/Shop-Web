@using OnlineShopping.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var k in Model)
    {

    <tr>
        <td>
            @k.personelID
        </td>
        <td>
            @k.personelAd
        </td>
        <td>
            @k.personelSoyad
        </td>
        <td>
            <img src="@k.personelGorsel" style="width:100px; height:70px;" />
        </td>
        <td>
            @k.Departmanid
        </td>
   
        <td><a href="/Personel/PersonelGetir/@k.personelID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Departman/DepartmanDetay/@k.personelID" class="btn btn-success" style="width:150px">Satışlar</a></td>
    </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>