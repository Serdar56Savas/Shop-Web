@using OnlineShopping.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.satisID</td>
            <td>@x.Urun.urunAd</td>
            <td>@x.Cariler.cariAd @x.Cariler.cariSoyad</td>
            <td>@x.Personel.personelAd @x.Personel.personelSoyad</td>
            <td>@x.fiyat</td>
            <td>@x.adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.tarih</td>
           
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:dodgerblue">Yazdır</button>