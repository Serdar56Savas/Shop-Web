@model OnlineShopping.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış İşlemi Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{
    @Html.HiddenFor(x => x.satisID)
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x=>x.urunid,(List<SelectListItem>)ViewBag.dgr1,new
    {@class ="form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x=>x.cariid,(List<SelectListItem>)ViewBag.dgr2,new
    {@class ="form-control" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x=>x.personelid,(List<SelectListItem>)ViewBag.dgr3,new
    {@class ="form-control" })
    <br />
    @Html.LabelFor(x => x.adet)
    @Html.TextBoxFor(x => x.adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.fiyat)
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />

    @*@Html.TextBoxFor(x => x.kategoriid, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.tarih)
    @Html.TextBoxFor(x => x.tarih, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}
