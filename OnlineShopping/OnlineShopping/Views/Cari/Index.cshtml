@using OnlineShopping.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>d
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.cariID</td>
            <td>@x.cariAd</td>
            <td>@x.cariSoyad</td>
            <td>@x.cariSehir</td>
            <td>@x.cariMail</td>
            <td><a href="/Cari/CariSil/@x.cariID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.cariID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.cariID" class="btn btn-default" style="background-color:aquamarine">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>

