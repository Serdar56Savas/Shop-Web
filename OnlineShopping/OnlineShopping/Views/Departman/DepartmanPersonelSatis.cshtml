@using OnlineShopping.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satış</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.dpers</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Urun.urunAd</td>
            <td>@x.Cariler.cariAd @x.Cariler.cariSoyad</td>
            <td>@x.fiyat ₺</td>
            <td>@x.adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:lawngreen">Yazdır</a></td>
        </tr>
    }
</table>

